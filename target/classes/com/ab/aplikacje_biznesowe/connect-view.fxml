<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ab.aplikacje_biznesowe.ConnectController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Połącz się z bazą danych:" />
   <TextField fx:id="adres" promptText="adres" />
   <TextField fx:id="port" promptText="port" />
   <TextField fx:id="db" promptText="baza danych" />
   <TextField fx:id="login" promptText="login" />
   <PasswordField fx:id="password" promptText="hasło" />
    <Button onAction="#onConnectButtonClick" text="Połącz" />

    <Label fx:id="connectionResults" prefHeight="17.0" prefWidth="189.0" textAlignment="CENTER" />
</VBox>
