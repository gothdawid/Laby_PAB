<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog>
    <changeSet  id="1"  author="asia">
        <createTable tableName="groups">
            <column  name="id"  type="int(11)" autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="group_name"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="users">
            <column  name="id"  type="int(11)" autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="last_name"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column  name="first_name"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column  name="address"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column  name="city"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column  name="group_id"  type="int(11)">
                <constraints nullable="false" foreignKeyName="fk_users_group" references="groups(id)"/>
            </column>
        </createTable>
        <createTable tableName="messages">
            <column  name="id"  type="int(11)" autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="sender_id"  type="int(11)">
                <constraints  nullable="false" foreignKeyName="fk_sender_users" references="users(id)"/>
            </column>
            <column  name="receiver_id"  type="int(11)">
                <constraints  nullable="false" foreignKeyName="fk_receiver_users" references="users(id)"/>
            </column>
            <column  name="message"  type="text">
                <constraints  nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="subjects">
            <column  name="id"  type="int(11)" autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="name"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column  name="teacher_id"  type="int(11)">
                <constraints  nullable="false" foreignKeyName="fk_subjects_users" references="users(id)"/>
            </column>
        </createTable>
        <createTable tableName="grades">
            <column  name="id"  type="int(11)" autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="student_id"  type="int(11)">
                <constraints  nullable="false" foreignKeyName="fk_student_users" references="users(id)"/>
            </column>
            <column  name="teacher_id"  type="int(11)">
                <constraints  nullable="false" foreignKeyName="fk_teacher_users" references="users(id)"/>
            </column>
            <column  name="subject_id"  type="int(11)">
                <constraints  nullable="false" foreignKeyName="fk_subject_subjects" references="subjects(id)"/>
            </column>
            <column  name="grade"  type="int(11)">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>